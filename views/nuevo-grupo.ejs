
<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %></h1>
 <form action="/nuevo-grupo" class="default-form" method="POST">
    <div class="campo">
        <label for="">Nombre</label>
        <input type="text" name="nombre" id="nombre" placeholder="Ingresa tu nombre"> 
    </div>
    <div class="contenedor-editor ">
        <input id="x" type="hidden" name="descripcion">
        <trix-editor input="x"></trix-editor>
    </div>

    <div class="campo">
        <label for="">Categoria</label>
        <select name="categoriaId" id="">
            <option value="">--Elige una categoria </option>
            <% categorias.forEach(categoria=>{ %>
            <option value="<%= categoria.id %>"> <%= categoria.nombre %> </option>
              
            <% })  %>
        </select>
    </div>
    <div class="campo">
       <label for="">imagen</label>
       <input type="file" name="imagen">
    </div>
    <div class="campo">
        <label>Sitio web</label>
        <input type="url" name="url" id="" placeholder="Sitio Web">
    </div>
    <div class="campo">
        <input type="submit" value="Crear Grupo" class="btn btn-rosa">
    </div>
 </form>
</main>                                  